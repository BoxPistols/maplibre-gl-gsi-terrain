{
	"name": "maplibre-gl-gsi-terrain",
	"version": "2.2.2",
	"type": "module",
	"main": "./dist/terrain.js",
	"types": "./dist/terrain.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite -c vite.config.example.ts",
		"build:example": "vite build -c vite.config.example.ts",
		"build": "vite build && tsc",
		"vercel-build": "npm run build:example",
		"prepare": "npm run build",
		"test": "vitest src --coverage --coverage.provider=v8",
		"test:ci": "vitest run src --coverage --coverage.provider=v8 --reporter=verbose",
		"test:modules": "vitest example/modules --coverage --coverage.provider=v8",
		"test:modules:ci": "vitest run example/modules --coverage --coverage.provider=v8 --reporter=verbose",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:all": "pnpm test:ci && pnpm test:modules:ci && pnpm test:e2e",
		"lint": "eslint src example --ext .ts,.tsx,.js,.jsx",
		"lint:fix": "eslint src example --ext .ts,.tsx,.js,.jsx --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"fix": "prettier --write . && pnpm run lint:fix",
		"type-check": "tsc --noEmit",
		"security:audit": "pnpm audit --audit-level moderate",
		"security:snyk": "snyk test",
		"ci:check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm test:ci",
		"ci:build": "pnpm build && pnpm build:example",
		"postinstall": "husky"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"@vitest/browser": "^2.1.8",
		"@vitest/coverage-v8": "^2.1.8",
		"eslint": "^9.39.1",
		"happy-dom": "^20.0.10",
		"husky": "^9.1.7",
		"maplibre-gl": "^5.13.0",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vite": "^5.4.0",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"mapbox-gl": "^3.16.0"
	}
}
