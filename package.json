{
  "name": "maplibre-gl-gsi-terrain",
  "version": "2.2.2",
  "type": "module",
  "main": "./dist/terrain.js",
  "types": "./dist/terrain.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite -c vite.config.example.ts",
    "build:example": "vite build -c vite.config.example.ts",
    "build": "vite build && tsc",
    "prepare": "npm run build",
    "test": "vitest src --coverage --coverage.provider=v8",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "prettier --write . && eslint . --ext .ts,.tsx,.js,.jsx --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/browser": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.32.0",
    "maplibre-gl": "^5.0.0",
    "playwright": "^1.49.1",
    "prettier": "^3.6.2",
    "typescript": "^5.5.3",
    "vite": "^3.2.3",
    "vitest": "^2.1.8"
  }
